<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título de la página -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--- RUTINAS ---"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Botón a la izquierda -->



    <!-- Botón redondo para el nombre de la rutina -->

    <Button
        android:id="@+id/botonDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="157dp"
        android:text="Ver Datos" />

    <Button
        android:id="@+id/botonNombreRutina"
        android:layout_width="343dp"
        android:layout_height="63dp"
        android:layout_below="@+id/botonDerecha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/fondonaranja"
        android:padding="16dp"
        android:text="Nombre de la Rutina"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
